{
    "openapi": "3.0.0",
    "info": {
        "title": "POS QRCode API",
        "description": "Public API for Restaurant Menu (used by React)",
        "contact": {
            "name": "Fatkhur Rohman",
            "email": "support@example.com"
        },
        "version": "1.0.0"
    },
    "paths": {
        "/api/restaurants/{restaurant}/menus": {
            "get": {
                "tags": [
                    "Menus"
                ],
                "summary": "Get restaurant menu list",
                "description": "Public endpoint to fetch menus with pagination, search, category and tags filter",
                "operationId": "getRestaurantMenus",
                "parameters": [
                    {
                        "name": "restaurant",
                        "in": "path",
                        "description": "Restaurant ID",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    },
                    {
                        "name": "per_page",
                        "in": "query",
                        "schema": {
                            "type": "integer",
                            "example": 10
                        }
                    },
                    {
                        "name": "search",
                        "in": "query",
                        "description": "Search menu name",
                        "schema": {
                            "type": "string",
                            "example": "nasi"
                        }
                    },
                    {
                        "name": "category_id",
                        "in": "query",
                        "schema": {
                            "type": "integer",
                            "example": 2
                        }
                    },
                    {
                        "name": "tags[]",
                        "in": "query",
                        "description": "Filter by tag names",
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "example": "pedas"
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "type": "object"
                                            }
                                        },
                                        "meta": {
                                            "properties": {
                                                "current_page": {
                                                    "type": "integer"
                                                },
                                                "last_page": {
                                                    "type": "integer"
                                                },
                                                "per_page": {
                                                    "type": "integer"
                                                },
                                                "total": {
                                                    "type": "integer"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Menus",
            "description": "Menus"
        }
    ]
}